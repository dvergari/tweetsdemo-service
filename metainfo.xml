<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>TWEETDEMO</name>
      <displayName>Tweets Demo</displayName>
      <comment>This tweets demo service show real time tweets on a dashbord. It requires storm already installed and started on the Sandbox</comment>
      <version>0.0.1</version>
      <components>
        <component>
          <name>TWEETDEMO_MASTER</name>
          <displayName>Tweets Demo</displayName>
          <category>MASTER</category>
          <cardinality>1</cardinality>
          <dependencies>
            <dependency>
              <name>STORM/DRPC_SERVER</name>
              <scope>host</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>TWEETDEMO/TWEETDEMO_MASTER</co-locate>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>STORM/NIMBUS</name>
              <scope>host</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>TWEETDEMO/TWEETDEMO_MASTER</co-locate>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>STORM/STORM_UI_SERVER</name>
              <scope>host</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>TWEETDEMO/TWEETDEMO_MASTER</co-locate>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>STORM/SUPERVISOR</name>
              <scope>host</scope>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>TWEETDEMO/TWEETDEMO_MASTER</co-locate>
              </auto-deploy>
            </dependency>
          </dependencies>
          <commandScript>
            <script>scripts/master.py</script>
            <scriptType>PYTHON</scriptType>
          </commandScript>
        </component>
      </components>
      <osSpecifics>
        <osSpecific>
          <osFamily>redhat6</osFamily>
          <packages>
            <package><name>git</name></package>
            <package><name>wget</name></package>
            <package><name>tar</name></package>
          </packages>
        </osSpecific>
      </osSpecifics>
      <requiredServices>
        <service>HDFS</service>
        <service>STORM</service>
      </requiredServices>
    </service>
  </services>
</metainfo>
